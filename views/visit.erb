<script type="text/javascript">
    $(function() {
        $('#colorpicker').simplecolorpicker();
        $('#datetimepicker').datetimepicker();
    });
</script>

<h2>Записаться</h2>
<p>Здесь вы можете записаться к нам в Barber Shop</p>

<form action="/visit" method="post">
  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Ваше имя</label>
    <input name="client[name]" type="text" class="form-control" placeholder="Введите ваше имя" value="<%= @c.name %>">
  </div>

  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Ваш телефон</label>
    <input name="client[phone]" type="text" class="form-control" placeholder="Введите ваш номер телефона" value="<%= @c.phone %>">
  </div>

  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Когда вас ждать</label>
    <input id="datetimepicker" name="client[datestamp]" type="text" class="form-control" placeholder="Введите дату и время" value="<%= @c.datestamp %>">
  </div>

  <!-- <div class="form-group">
    <label for="exampleFormControlSelect1">Выберите мастера:</label>
    <select class="form-control" name="barber" id="exampleFormControlSelect1">
      <% @barbers.each do |row| %>
        <option <%= @barber == row['name'] ? "selected" : '' %>><%= row['name'] %></option>
      <% end %>
    </select>
  </div> -->

  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Выберите цвет окрашивания</label>
    <select id="colorpicker" name="client[color]">
      <option value="#7bd148">Green</option>
      <option value="#5484ed">Bold blue</option>
      <option value="#a4bdfc">Blue</option>
      <option value="#46d6db">Turquoise</option>
      <option value="#7ae7bf">Light green</option>
      <option value="#51b749">Bold green</option>
      <option value="#fbd75b">Yellow</option>
      <option value="#ffb878">Orange</option>
      <option value="#ff887c">Red</option>
      <option value="#dc2127">Bold red</option>
      <option value="#dbadff">Purple</option>
      <option value="#e1e1e1">Gray</option>
    </select>
  </div>

  <button type="submit" class="btn btn-primary">Записаться</button>

</form>
